{
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node Server",
      "port": 9678,
      "restart": true,
      "outFiles": ["${workspaceFolder}/@api/server/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Jest tests",
      "port": 9876,
      "restart": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch localhost:5678",
      "url": "http://localhost:5678/",
      "webRoot": "${workspaceFolder}/@pwa/client/src",
      "pathMapping": {
        "/_next": "${workspaceFolder}/@pwa/client/.next"
      }
    }
  ]
}
